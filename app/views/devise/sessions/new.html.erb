<div id="main" class="container">
  <div class="row py-11">
    <div  class="col-sm-11 col-md-9 col-lg-8 col-xl-7 col-xxl-5 mx-auto loginForm">
      <h3 class="text-center py-5">Login</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="input-group mb-3"> 
          <span class="input-group-text" id="inputGroup-sizing-default"><%= f.label :email, class: "form-label", style:"margin-top:6px; padding-left:27px"  %></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
        </div>
        
        <div class="input-group mb-3"> 
          <span class="input-group-text" id="inputGroup-sizing-default"><%= f.label :password, class: "form-label", style:"margin-top:8px"  %></span>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label fw-200 fs-8" %>
          </div>
        <% end %>

        <div class="actions d-grid gap-2 col-6 mx-auto">
          <%= f.submit "Log in", class: "btn btn-primary " %>
        </div> 
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div> 
</div> 

