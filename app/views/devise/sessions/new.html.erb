<div class="container-xxl my-md-4 bd-layout">
  <div class="loginForm">
    <h3 class="text-center">Login</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", autocomplete: 'off' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label fw-200 fs-8" %>
        </div>
      <% end %>

      <div class="actions d-grid gap-2 col-6 mx-auto">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>
  </div> 
</div> 

