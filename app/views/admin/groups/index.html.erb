<div id="main" class="container py-11">
  <div class="row">
      <div class="col-12">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
          <!--<p><%= notice%></p> -->
        <% end %>
      </div>
    </div>
   <%if current_user.admin%> 
      <div class="row">
        <div class="col-12 text-center"> 
          <h5 class="py-4">Vos informations:</h5>
          <table class="table table-borderless">
            <thead class="table-primary">
              <tr class="fw-bold">
                <td>Nom</td> 
                <td>Email</td>
                <td>Action</td> 
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= current_user.name%></td>
                <td><%= current_user.email%></td>
                <td>
                  <%= link_to "Acceuil", root_path, :class=>"btn btn-secondary btn-sm"%>
                  <%= link_to "Ajouter utilisateur", new_admin_user_path, :class=>"btn btn-secondary btn-sm"%>
                  <%=link_to "DÃ©connexion", destroy_user_session_path, method: :delete,:class=>"btn btn-danger btn-sm" %> 
                </td>
              </tr>
            </tbody>
          </table>  
        </div>
      </div> 
    <%end%> 
  <h4> Informations des groupes</h4>
  <table class="table">
    <thead class="thead-primary">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Number of users added</th>
          <th>Action</th>
        </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
          <tr>
            <td><%= group.name%> </td>
            <td><%= group.description%></td>
            <td>
              <%= group.users.count%>
            </td>
            <br>
            <td> 
              <%= link_to "Edit User", admin_group_path(group), class: "btn btn-secondary col-2" %> |
              <%= link_to "Edit Group", edit_admin_group_path(group),:class=>"btn btn-secondary" %> |
              <%= link_to "Delete Group", admin_group_path(group), method: :delete, data: { confirm: 'are you sure ?' },:class=>"btn btn-danger" %>
            </td>
          </tr>
      <% end %>
    </tbody> 
  </table>
 <%= paginate @groups%>
</div>