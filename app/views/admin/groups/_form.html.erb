<div id="main" class="container">
  <div id="error_explanation">  
    <% if @group.errors.any? %>
      <div id="error_explanation">
        <h4>
        <%= pluralize(@group.errors.count, "error") %> prohibited
        this group from being saved:
        </h4>
        <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <li><%= msg %></li>
          </div>
        <% end %>
        </ul>
      </div>  
    <% end %>
  </div>

  <%= form_with(model: @groups, url: admin_groups_path, local: true) do |f| %>
    <div class="widget-stat card">
      <div class="form-inputs card-body p-4">
        <div class="form-group">
          <label class="mb-1"><strong>Name</strong></label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Group name", :required=> true%>
        </div>

        <div class="form-group">
          <label class="mb-1"><strong>Description</strong></label>
            <%= f.text_area :description, autofocus: true, autocomplete: "description", class:"form-control", placeholder:"Group description", :required=> true%>
        </div>

        <br>
        <div class="text-center mb-2">
          <%= f.submit "Valider", :class => "btn btn-primary"%>
          <%= link_to "Retour", admin_groups_path, :class => "btn btn-secondary" %> 
        </div>
      </div>
    </div>

  <% end %>
</div>
