<div id="main" class="container">
  <div id="error_explanation">  
    <% if @promotion.errors.any? %>
      <div id="error_explanation">
        <h4>
        <%= pluralize(@promotion.errors.count, "error") %> prohibited
        this promotion from being saved:
        </h4>
        <ul>
        <% @promotion.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <li><%= msg %></li>
          </div>
        <% end %>
        </ul>
      </div>  
    <% end %>
  </div>

  <%= form_with(model: @promotions, url: admin_promotions_path, local: true) do |f| %>
    <div class="widget-stat card">
      <div class="form-inputs card-body p-4">

        <div class="form-group">
          <label class="mb-1"><span>Add photo</span></label>
          <%= f.file_field :image_promotion, autofocus: true, accept:"image/*", autocomplete: "image_promotion",class:"form-control"%>
        </div>

        <div class="form-group">
          <label class="mb-1"><strong>Ann√©e</strong></label>
            <%= f.text_field :year_promotion, autofocus: true, autocomplete: "year_promotion", class:"form-control", placeholder:"Promotion year", :required=> true%>
        </div>

        <div class="form-group">
          <label class="mb-1"><strong>Nom</strong></label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Promotion name", :required=> true%>
        </div>

        <div class="form-group">
          <label class="mb-1"><strong>Description</strong></label>
            <%= f.text_area :description, autofocus: true, autocomplete: "description", class:"form-control", placeholder:"Promotion description", :required=> true%>
        </div>

        <br>
        <div class="text-center mb-2">
          <%= f.submit "Valider", :class => "btn btn-primary"%>
          <%= link_to "Retour", admin_promotions_path, :class => "btn btn-secondary" %> 
        </div>
      </div>
    </div>

  <% end %>
</div>
