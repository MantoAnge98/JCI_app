<div id="main" class="container py-11">
  <div class="row">
      <div class="col-12">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
          <!--<p><%= notice%></p> -->
        <% end %>
      </div>
    </div>
      <%if current_user.admin%> 
        <div class="row">
          <div class="col-12 text-center"> 
            <h5 class="py-4">Vos informations:</h5>
            <table class="table table-borderless">
              <thead class="table-primary">
                <tr class="fw-bold">
                  <td>Nom</td> 
                  <td>Email</td>
                  <td>Action</td> 
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= current_user.name%></td>
                  <td><%= current_user.email%></td>
                  <td>
                    <%= link_to "Acceuil", root_path, :class=>"btn btn-secondary btn-sm"%>
                    <%= link_to "Ajouter utilisateur", new_admin_user_path, :class=>"btn btn-secondary btn-sm"%>
                    <%=link_to "Déconnexion", destroy_user_session_path, method: :delete,:class=>"btn btn-danger btn-sm" %> 
                  </td>
                </tr>
              </tbody>
            </table>  
          </div>
        </div> 
      <%end%> 
    <h4> Information sur les promotions</h4>
  <table class="table">
    <thead class="thead-primary">
        <tr>
          <td>Image</td>
          <td>Année</td>
          <th>Nom</th>
          <th>Description</th>
          <th>Nombre d'utilisateur ajouté</th>
          <th>Action</th>
        </tr>
    </thead>
    <tbody>
      <% @promotions.each do |promotion| %>
        <tr>
          <td><%= image_tag (promotion.image_promotion_thumbnail), style: 'height:150px;width:150px;'%></td>
          <td><%= promotion.year_promotion%> </td>
          <td><%= promotion.name%></td>
          <td><%= promotion.description%></td>
          <td>
            <%= promotion.users.count%>
          </td> 
          <td>  
            <%= link_to "Modifier", edit_admin_promotion_path(promotion),:class=>"btn btn-secondary btn-sm" %>
            <%= link_to "Supprimer", admin_promotion_path(promotion), method: :delete, data: { confirm: 'are you sure ?' },:class=>"btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody> 
  </table>
 <%= paginate @promotions%>
</div>