<div id="main" class="container">
  <% if @user.errors.any? %> 
    <div id="error_explanation"  class="alert alert-danger" role="alert"> 
      <h4><%= pluralize(@user.errors.count, "erreurs") %> empêche(nt) <%= @user.name %> d'être sauvegardée(s):</h4> 
      <ul> 
        <% @user.errors.full_messages.each do |message| %> 
          <li><%= message %></li> 
        <% end %> 
      </ul> 
    </div> 
  <% end %> 
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="container">
      <%= form_with(model: [:admin, @user], local: true) do |f| %>
        
        <div class="form-group">
          <label class="mb-1"><span>Add photo</span></label>
          <%= f.file_field :avatar, autofocus: true, accept:"image/*", autocomplete: "avatar",class:"form-control"%>
        </div>
         
        <div class="field form-goup">
          <%= f.label :name %>
          <%= f.text_field :name, :class => 'form-control' %> 
        </div>

        <div class="field form-goup">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, :class => 'form-control' %> 
        </div>

        <div class="field form-goup">
          <%= f.label :Telephone %>
          <%= f.number_field :telephone, :class => 'form-control' %> 
        </div>

        <div class="field form-goup">
          <%= f.label :Member_Since %>
          <%= f.date_field :added_since, :class => 'form-control' %> 
        </div>

        <div class="field form-goup">
          <%= f.label :email %> 
          <%= f.email_field :email, :class => 'form-control' %> 
        </div> 
        <br>

        <div class="field" style="margin-bottom:15px">
          <div class="checkbox">
            <%= f.label :admin %> 
            <%= f.check_box :admin,{}, "true","false" %> 
          </div>
        </div> 

        <div class="field" style="margin-bottom:15px">
          <div class="checkbox">
            <%= f.label :Group %> 
            <%= f.collection_select :group_id, Group.all, :id, :name, prompt: true,  class: "form-control" %>
          </div>
        </div> 

        <div class="field" style="margin-bottom:15px"> 
          <div class="checkbox-inline">
            <%= f.label :Setting %> 
            <%= f.collection_select :setting_id, Setting.all, :id, :devise, prompt: true, class: "form-control" %>
          </div>
        </div> 
      
        <div class="field">
          <%= f.label :password %> 
          <%= f.password_field :password,  :class => 'form-control'  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %> 
          <%= f.password_field :password_confirmation, autocomplete: "email",  class: "form-control"  %> 
        </div>
        <hr>
        <div class="actions text-center">
          <%= f.submit "Valider", class: "btn btn-secondary" %>
           <%= link_to  "Retour", admin_users_path, class: "btn btn-secondary" %>
        </div> 
      <% end %>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
</div>