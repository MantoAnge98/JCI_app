<div id="main" class="container">
  <div class="row">
      <div class="col-12">
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
            <!--<p><%= notice%></p> -->
        <% end %>
      </div>
    </div>
    <hr>
    <%if current_user.admin%>
      <div class="second_section">
        <div class="row">
          <div class="col-12">
            <section class="first_section text-center">
              <h3>Your information:</h3>
              <p>Name: <%= current_user.name%></p>
              <p>Email: <%= current_user.email%></p>
            </section>
            <div class="text-center">
              <h3>Action:</h3>
              <%= link_to "Dashboard", root_path, :class=>"btn btn-secondary sm col-2"%>
              <%=link_to "Logout", destroy_user_session_path, method: :delete,:class=>"btn btn-danger col-2" %>|
              <%= link_to "Create User", new_admin_user_path, :class=>"btn btn-secondary sm col-2"%> 
            </div>
            <hr>
          </div>
        </div>
      </div>
    <%end%>
    <br>
    <h4> All User Information</h4>
  <table class="table">
    <thead class="thead-primary">
        <tr>
          <th>Admin</th>
          <th>Name</th>
          <th>First Name </th>
          <th>Telephone</th>
          <th>Group Name</th>
          <th>Email</th>
          <th>Member since</th>
          <th>Action</th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
          <tr>
              <td><%= user.admin %></td>
              <td><%= link_to "#{user.name}", admin_user_path(user)%></td>
              <td><%= user.first_name%></td>
              <td><%= user.telephone%></td>
              <td>
                <% if user.group%>
                  <%= user.group.name %>
                <% end%>
              </td> 
              <td><%= user.email%></td>
              <td><%= user.added_since%></td>
              <td> 
                <%= link_to "Show", admin_user_path(user), class: "btn btn-secondary col-2" %> |
                <%= link_to "Edit User", edit_admin_user_path(user),:class=>"btn btn-secondary" %>|
                <%= link_to "Delete User", admin_user_path(user), method: :delete, data: { confirm: 'are you sure ?' },:class=>"btn btn-danger" %>
              </td>
          </tr>
      <% end %>
    </tbody> 
  </table>
  <%= paginate @users%>
</div>