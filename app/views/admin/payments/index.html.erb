<div id="main" class="container">
  <div class="row">
      <div class="col-12">
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
            <!--<p><%= notice%></p> -->
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <h3>Action:</h3>
      <%= link_to "Dashboard", root_path, :class=>"btn btn-secondary sm col-2"%>
      <%=link_to "Logout", destroy_user_session_path, method: :delete,:class=>"btn btn-danger col-2" %>|
      <%= link_to "Create Payment", new_admin_payment_path, :class=>"btn btn-secondary sm col-2"%> 
    </div>
    <br>
    <h4> All payment Information</h4>
  <table class="table">
    <thead class="thead-primary">
        <tr>
          <th>Date payment</th>
          <th>Note</th>
          <th>Payment Amount</th>
          <th>Paid by</th>
          <th>Action</th>
        </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.date_payment%> </td>
            <td><%= payment.note%></td>
            <td><%= payment.pay_amount%></td>
            <td> 
              <%if payment.user_id %> 
                <%= payment.user.name%>
              <%end%>
            </td> 
            <td>  
              <%= link_to "Edit", edit_admin_payment_path(payment),:class=>"btn btn-secondary" %> |
              <%= link_to "Delete", admin_payment_path(payment), method: :delete, data: { confirm: 'are you sure ?' },:class=>"btn btn-danger" %>
            </td>
          </tr>
      <% end %>
    </tbody> 
  </table>
 <%= paginate @payments%>
</div>